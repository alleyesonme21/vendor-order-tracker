@using VendorOrderTracker.Models;
@{
  Layout = "_Layout";
}
<div class="container">
  <br>
  <h1>Vendor List</h1>
  @if (@Model.Count == 0)
  {
    <h3>No vendors have been added yet!</h3>
  } 
  @foreach (Vendor vendor in Model)
  {
    <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
  }
  
  <p><a href='/vendors/new'>Add New Vendor</a></p>
  <p><a href='/'>Return Home</a></p>

</div>