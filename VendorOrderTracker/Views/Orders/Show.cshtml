@{
  Layout = "_Layout";
}
<div class="container">
  <br>
  <h1>Order Details: </h1>
  <h2>Title: @Model["order"].Title</h2>
  <h2>Description: @Model["order"].Description</h2>
  <h2>Price: @Model["order"].Price<h2>
  <h2>Vendor: @Model["vendor"].Name</h2>
  <h2>category: @Model["order"].OrderCategory</h2>
